<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="@drawable/shape_habit_list_item_background"
    android:padding="16dp"
    android:id="@+id/main">

    <ImageView
        android:id="@+id/iv_habit_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_habit_reading_done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_habit_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/habit_example_reading_failed_title"
        android:textColor="@color/home_text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/iv_more"
        app:layout_constraintStart_toEndOf="@id/iv_habit_icon"
        app:layout_constraintTop_toTopOf="@id/iv_habit_icon" />

    <TextView
        android:id="@+id/tv_habit_frequency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/habit_example_reading_failed_freq"
        android:textColor="@color/home_text_secondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_habit_icon"
        app:layout_constraintEnd_toStartOf="@id/iv_more"
        app:layout_constraintStart_toEndOf="@id/iv_habit_icon"
        app:layout_constraintTop_toBottomOf="@id/tv_habit_title" />

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:src="@drawable/ic_more_vert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/home_text_secondary" />

</androidx.constraintlayout.widget.ConstraintLayout>